extends ./layout

block main
	#content
		.mdl-grid
			.mdl-cell.mdl-cell--12-col
				h2.mdl-color-text--primary= list.name
				
			.mdl-cell.mdl-cell--6-col.mdl-cell--3-offset
				.mdl-card.mdl-shadow--4dp
					.mdl-card__title.mdl-color--primary.mdl-color-text--white
						h2.mdl-card__title-text Share your list
					.mdl-card__supporting-text
						- var url = listLink + '/lists/join/' + list.id;
						ul
							li
								a(target="_new", href="mailto:?subject=GiftSift - #{list.name}&body=#{list.owner} has shared an GiftSift list with you.</br>Click <a href='#{url}'>here</a> to join the list and see what they've got on their wish list.") Email
							li
								a(href="https://www.facebook.com/sharer/sharer.php?u=View my wish list on GiftSift #{url}") Facebook
							li
								a(href="https://twitter.com/home?status=View my wish list on GiftSift #{url}") Twitter			
							li
								a(href="https://plus.google.com/share?url=#{url}") Google+
			

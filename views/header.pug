block header
	header.mdl-layout__header.mdl-layout--small-screen-only
		.mdl-layout-icon
		.mdl-layout__header-row
			.mdl-layout__title.mdl-layout--small-screen-only
				span GiftSift
				//img.logo(src="/images/logo-white.png")
			.mdl-layout-spacer
			nav.mdl-navigation.mdl-layout--large-screen-only
				a.mdl-navigation__link(href="/") Home
				if user && user.roles && user.roles.indexOf('admin') >= 0
					a.mdl-navigation__link(href="/admin") Admin
				if !user
					a.mdl-navigation__link(href="/login") Login
				if user
					a.mdl-navigation__link(href="/logout") Logout
	.mdl-layout__drawer
		header.mdl-color-text--white
			.mdl-layout__title GiftSift
			if user
				img(src=user.picture)
				span= user.displayName
		nav.mdl-navigation
			a.mdl-color-text--blue-grey-800.mdl-navigation__link(href="/")
				i.material-icons home
				span Home
			if user && user.roles && user.roles.indexOf('admin') >= 0
				a.mdl-color-text--blue-grey-800.mdl-navigation__link(href="/admin") 
					i.material-icons dashboard
					span Admin
			if !user
				a.mdl-color-text--blue-grey-800.mdl-navigation__link(href="/login") 
					i.material-icons power_settings_new
					span Login
			if user
				a.mdl-color-text--blue-grey-800.mdl-navigation__link(href="/logout") 
					i.material-icons power_settings_new
					span Logout

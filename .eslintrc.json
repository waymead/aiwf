{
    "extends": [
        "airbnb",
        "prettier"
    ],
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "script",
        "ecmaFeatures": {}
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "rules": {
        "quotes": [
            2,
            "single",
            "avoid-escape"
        ],
        "prettier/prettier": [
            "error",
            {
                "singleQuote": false            }
        ]
    }
}